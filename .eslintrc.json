{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["prettier", "plugin:prettier/recommended"],
  "rules": {
    "import/extensions": [0, "always"]
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },

  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "plugins": ["@typescript-eslint"]
}
